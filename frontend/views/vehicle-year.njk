{% extends 'layouts/mts-without-container.layout.njk' %}
{% set pageTitle = 'What year was the vehicle made?'  %}

{% block content %}
<a href="../../models" class="link-back">Back</a>

{% if errorMessage %}
  {% set elementId = 'Year-of-manufactuer' %}
  {% include './layouts/partials/error-message.njk' %}
{% endif %}

<header class="content-header">
  <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
    What year was the vehicle made?
  </h1>
</header>

<div class="row contents">
  <div class="col-lg-12">
    <div class="grid-row">
      <div class="column-three-quarters">
        <form method="POST">
          <div class="form-group {% if errorMessage %}form-group-error{% endif %}">
            {% if errorMessage %}
              <span class="error-message">{{ errorMessage }}</span>
            {% endif %}
            <label class="form-label" for="year">
                <span class="form-hint">For example, 2004</span>
            </label>
            <input class="form-control" id="year" type="text" name="year" value="">

          </div>
          <div>
            <input id="continue-button" class="button" type="submit" value="Continue" style="margin-top:30px">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
