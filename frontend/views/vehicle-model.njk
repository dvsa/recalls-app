{% extends 'layouts/mts-without-container.layout.njk' %}
{% set pageTitle = 'What model is the ' + recallType + '?' %}

{% block content %}
<a href="vehicle-make?recallType={{recallType}}" class="link-back">Back</a>

{% if errorMessage %}
  {% set elementId = 'model' %}
  {% include './layouts/partials/error-message.njk' %}
{% endif %}

<header class="content-header">
  <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
    What model is the {{recallType}}?
  </h1>
</header>

<div class="row contents">
  <div class="col-lg-12">
    <div class="grid-row">
      <div class="column-three-quarters">
        <form method="POST" action="vehicle-model?recallType={{recallType}}&make={{make | urlencode}}&model={{model | urlencode}}">
          <div class="form-group {% if errorMessage %}form-group-error{% endif %}">
            <p class="">This service only includes {{recallTypePlural}} that have been recalled.</p>
            {% if errorMessage %}
              <span class="error-message">{{ errorMessage }}</span>
            {% endif %}
            <select class="form-control" id="model" name="model">
              <option value="">Choose a model</option>
              {% for model in models %}
              <option value="{{model}}">{{model}}</option>
              {% endfor %}
            </select>
          </div>
          <div>
            <input id="continue-button" class="button" type="submit" value="Continue" style="margin-top:30px">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
