{% extends 'layouts/mts-without-container.layout.njk' %}
 {% set pageTitle = 'Check vehicle recalls' %}
 {% block content %}
 <main id="content">
     <a href="#" class="link-back">Back</a> 
     <header class="content-header">
        <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
                What type of recall information are you looking for?</h1>
    </header>                       
     <div class="row contents">
        <div class="col-lg-12">
     <div class="grid-row">
    <div class="column-three-quarters">
        <form method="GET" action="vehicle-make">
            <div class="form-group">
                <fieldset>
                 <div class="multiple-choice">
                    
                    <input id="recalls-vehicle" type="radio" name="recallType" value="vehicle">
                    <label for="recalls-vehicle">Vehicle safety recalls</label>
                </div>
                <div class="multiple-choice">
                    <input id="recalls-other" type="radio" name="recallType" value="equipment">
                    <label for="recalls-other">Other recalled equipment<span class="form-hint">For example, tyres or child seats</span></label>
                </div>
                </fieldset>
            </div>
          <input id="continue-button" class="button" type="submit" value="Continue">
        </form>
    </div>
</div>  
 </main>
 {% endblock %} 
