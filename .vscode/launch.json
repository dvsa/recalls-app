    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "restart": true,
            "name": "Debug backend via NPM",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/backend",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "restart": true,
            "name": "Debug frontend via NPM",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "env": {
                "ASSETS_BASE_URL": "http://localhost:3002"
            },
            "port": 8228
        }
    ]
}